{
  "all": true,
  "include": [
    "src/**/*.{js,jsx,ts,tsx}"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.test.{js,jsx,ts,tsx}",
    "**/*.cy.{js,jsx,ts,tsx}",
    "**/node_modules/**",
    "**/coverage/**",
    "**/cypress/**",
    "**/__tests__/**",
    "**/__mocks__/**"
  ],
  "reporter": [
    "html",
    "text",
    "lcov",
    "json-summary"
  ],
  "report-dir": "coverage",
  "temp-dir": ".nyc_output",
  "check-coverage": true,
  "per-file": false,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 75,
  "watermarks": {
    "lines": [80, 90],
    "functions": [80, 90],
    "branches": [75, 85],
    "statements": [80, 90]
  }
}