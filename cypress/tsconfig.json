{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "types": ["cypress", "node", "mocha"],
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": false
  },
  "include": ["**/*.ts", "**/*.tsx", "../node_modules/cypress/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
